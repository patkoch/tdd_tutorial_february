<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Calculator" >

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="-" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonMinus"
        android:layout_alignRight="@+id/buttonMinus"
        android:text="+" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonMinus"
        android:layout_toLeftOf="@+id/buttonMinus"
        android:text="3" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonMinus"
        android:layout_toLeftOf="@+id/buttonThree"
        android:text="2" />

    <Button
        android:id="@+id/buttonZero"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBaseline="@+id/buttonMinus"
        android:layout_alignBottom="@+id/buttonMinus"
        android:layout_alignRight="@+id/buttonTwo"
        android:text="0" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBaseline="@+id/buttonTwo"
        android:layout_alignBottom="@+id/buttonTwo"
        android:layout_toLeftOf="@+id/buttonTwo"
        android:text="1" />

    <Button
        android:id="@+id/buttonMultiplication"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonPlus"
        android:layout_alignRight="@+id/buttonPlus"
        android:text="x" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonMultiplication"
        android:layout_alignRight="@+id/buttonMultiplication"
        android:text="/" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonDivision"
        android:layout_alignRight="@+id/buttonDivision"
        android:text="C" />

    <Button
        android:id="@+id/buttonSix"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBottom="@+id/buttonMultiplication"
        android:layout_alignRight="@+id/buttonThree"
        android:text="6" />

    <Button
        android:id="@+id/buttonFive"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonTwo"
        android:layout_alignRight="@+id/buttonTwo"
        android:text="5" />

    <Button
        android:id="@+id/buttonFour"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBottom="@+id/buttonFive"
        android:layout_alignRight="@+id/buttonOne"
        android:text="4" />

    <Button
        android:id="@+id/buttonNine"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonSix"
        android:layout_alignRight="@+id/buttonSix"
        android:text="9" />

    <Button
        android:id="@+id/buttonEigth"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/buttonFive"
        android:layout_alignRight="@+id/buttonFive"
        android:text="8" />

    <Button
        android:id="@+id/buttonSeven"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBottom="@+id/buttonEigth"
        android:layout_alignRight="@+id/buttonFour"
        android:text="7" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonClear"
        android:layout_alignLeft="@+id/buttonSeven"
        android:layout_alignRight="@+id/buttonNine"
        android:layout_alignTop="@+id/buttonClear"
        android:text="=" />

    <EditText
        android:id="@+id/input_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonClear"
        android:layout_alignLeft="@+id/buttonEqual"
        android:layout_alignRight="@+id/buttonClear"
        android:ems="10"
        android:inputType="textPostalAddress" >

        <requestFocus />
    </EditText>

</RelativeLayout>
